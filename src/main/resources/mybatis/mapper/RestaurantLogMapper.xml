<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.gt.mapper.RestaurantLogMapper">

    <!-- Result Map -->
    <resultMap id="RestaurantLogResultMap" type="com.ssafy.gt.dto.RestaurantLog">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="log" column="log"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- Insert -->
    <insert id="insert" parameterType="com.ssafy.gt.dto.RestaurantLog">
        INSERT INTO restaurant_log (user_id, log)
        VALUES (#{userId}, #{log})
    </insert>

    <!-- Select by User ID (최근 10개) -->
    <select id="selectById" parameterType="int" resultMap="RestaurantLogResultMap">
        SELECT id, user_id, log, created_at
        FROM restaurant_log
        WHERE user_id = #{id}
        ORDER BY created_at DESC
        LIMIT 10
    </select>

</mapper>
