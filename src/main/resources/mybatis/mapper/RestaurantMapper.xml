<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.gt.mapper.RestaurantMapper">



    <!-- Result Map -->
    <resultMap id="RestaurantResultMap" type="com.ssafy.gt.domain.Restaurant">
        <id property="id" column="id"/>
        <result property="tag" column="tag"/>
        <result property="x" column="x"/>
        <result property="y" column="y"/>
        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="tel" column="tel"/>
        <result property="openingHours" column="opening_hours"/>
        <result property="imageUrl" column="image_url"/>
        <result property="thumbnailUrl" column="thumbnail_url"/>
        <result property="averageRating" column="average_rating"/>
    </resultMap>
    
    <!-- Select by ID -->
    <select id="selectById" parameterType="int" resultMap="RestaurantResultMap">
        SELECT * FROM restaurants WHERE id = #{id}
    </select>

    <!-- Select by Tag -->
    <select id="selectByTag" parameterType="int" resultMap="RestaurantResultMap">
        SELECT * FROM restaurants WHERE tag = #{tag}
    </select>

    <!-- Select All -->
    <select id="selectAll" resultMap="RestaurantResultMap">
        SELECT * FROM restaurants
    </select>

    <!-- Update Average Rating -->
    <update id="updateAverageRating">
        UPDATE restaurants
        SET average_rating = #{averageRating}
        WHERE id = #{id}
    </update>

</mapper>