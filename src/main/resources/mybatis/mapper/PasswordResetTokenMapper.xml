<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.gt.mapper.PasswordResetTokenMapper">

    <!-- ResultMap 정의 -->
    <resultMap id="passwordResetTokenResultMap" type="com.ssafy.gt.dto.PasswordResetToken">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="token" column="token"/>
        <result property="expiryDate" column="expiry_date"/>
        <result property="createdDate" column="created_date"/>
        <result property="used" column="used"/>
    </resultMap>

    <!-- 토큰 저장 -->
    <insert id="insertToken" parameterType="com.ssafy.gt.dto.PasswordResetToken"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO password_reset_token (user_id, token, expiry_date, created_date, used)
        VALUES (#{userId}, #{token}, #{expiryDate}, #{createdDate}, #{used})
    </insert>

    <!-- 토큰으로 조회 -->
    <select id="findByToken" parameterType="String"
            resultMap="passwordResetTokenResultMap">
        SELECT id, user_id, token, expiry_date, created_date, used
        FROM password_reset_token
        WHERE token = #{token}
    </select>

    <!-- 사용자별 기존 토큰 삭제 -->
    <delete id="deleteByUserId" parameterType="String">
        DELETE FROM password_reset_token
        WHERE user_id = #{userId}
    </delete>

    <!-- 토큰 사용 처리 -->
    <update id="markAsUsed" parameterType="String">
        UPDATE password_reset_token
        SET used = true
        WHERE token = #{token}
    </update>

    <!-- 만료된 토큰 삭제 -->
    <delete id="deleteExpiredTokens">
        DELETE FROM password_reset_token
        WHERE expiry_date &lt; NOW()
    </delete>
</mapper>