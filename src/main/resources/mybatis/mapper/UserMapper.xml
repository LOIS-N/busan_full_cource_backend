<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.gt.mapper.UserMapper">

    <!-- Result Map -->
    <resultMap id="UserResultMap" type="com.ssafy.gt.domain.User">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="nickname" column="nickname"/>
    </resultMap>

    <!-- Insert -->
    <insert id="insert" parameterType="com.ssafy.gt.domain.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (user_id, password, email, nickname)
        VALUES (#{userId}, #{password}, #{email}, #{nickname})
    </insert>

    <!-- Select by ID -->
    <select id="selectById" parameterType="int" resultMap="UserResultMap">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <!-- Select by User ID -->
    <select id="selectByUserId" parameterType="string" resultMap="UserResultMap">
        SELECT * FROM users WHERE user_id = #{userId}
    </select>

    <!-- Select by Email -->
    <select id="selectByEmail" parameterType="string" resultMap="UserResultMap">
        SELECT * FROM users WHERE email = #{email}
    </select>

    <!-- Select All -->
    <select id="selectAll" resultMap="UserResultMap">
        SELECT * FROM users
    </select>

    <!-- Update -->
    <update id="update" parameterType="com.ssafy.gt.domain.User">
        UPDATE users
        SET password = #{password},
            email = #{email},
            nickname = #{nickname}
        WHERE id = #{id}
    </update>

    <!-- Delete -->
    <delete id="delete" parameterType="int">
        DELETE FROM users WHERE id = #{id}
    </delete>

</mapper>